{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    
  },
  "exclude": [
    "dist",
    "node_modules",
    "./coverage", 
    "__tests__", 
    "jest.config.js"
  ]
}
